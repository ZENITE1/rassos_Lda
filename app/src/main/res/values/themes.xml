<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Rassos_la" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/destaque_two</item>
        <item name="colorPrimaryDark">@color/destaque_two</item>
        <item name="colorAccent">@color/destaque_two</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Rassos_la_noActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/destaque_two</item>
        <item name="colorPrimaryDark">@color/destaque_two</item>
        <item name="colorAccent">@color/destaque_two</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="dialog_blue_button" parent="android:Widget.Button">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">@dimen/wrap_content</item>
        <item name="backgroundColor">@color/destaque_two</item>
        <item name="android:textSize">12dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="FacebookLoginButton">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>